                                            Content="MOST USED"
                                            FontSize="15"
                                            FontWeight="Bold"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="5"
                                            Grid.Row="0"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"/>

                                        <Label
                                            Content="Device"
                                            FontWeight="Bold"
                                            Grid.Column="1"
