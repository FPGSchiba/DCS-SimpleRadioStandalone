                                                    UseLayoutRounding="False"/>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel
                                        Height="65"
                                        HorizontalAlignment="Center"
                                        Margin="0"
                                        Orientation="Horizontal">
                                        <StackPanel.Resources>
                                            <converters:BooleanInverterConverter x:Key="BooleanInverterConverter"/>
                                        </StackPanel.Resources>

                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Margin="0"
                                            Orientation="Vertical">
                                            <Label
                                                Content="[FFID] Player Name"
                                                HorizontalAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                IsEnabled="{Binding Path=ClientState.ExternalAWACSModeConnected, Converter={StaticResource BooleanInverterConverter}}"
                                                Margin="10,10,0,0"
                                                x:Name="ExternalAWACSModeNameLabel"/>
                                            <TextBox
                                                Height="23"
                                                HorizontalAlignment="Center"
                                                IsEnabled="{Binding Path=ClientState.ExternalAWACSModeConnected, Converter={StaticResource BooleanInverterConverter}}"
                                                Margin="10,0,0,0"
                                                MaxLines="1"
                                                TextWrapping="Wrap"
                                                Width="200"
                                                x:Name="ExternalAWACSModeName"/>
                                        </StackPanel>
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Margin="10,0,0,0"
                                            Orientation="Vertical">

                                            <Label
                                                Content="Operation Password"
                                                HorizontalAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                IsEnabled="{Binding Path=ClientState.ExternalAWACSModeConnected, Converter={StaticResource BooleanInverterConverter}}"
                                                Margin="0,10,10,0"
                                                x:Name="ExternalAWACSModePasswordLabel"/>

                                            <PasswordBox
                                                Height="23"
                                                HorizontalAlignment="Center"
                                                IsEnabled="{Binding Path=ClientState.ExternalAWACSModeConnected, Converter={StaticResource BooleanInverterConverter}}"
                                                Margin="0,0,10,0"
                                                Width="200"
                                                x:Name="ExternalAWACSModePassword"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,0"
                                        Orientation="Horizontal">
                                        <Button
                                            Click="StartStop_OnClick"
                                            Content="Connect"
                                            HorizontalAlignment="Center"
                                            Margin="0,15,20,0"
                                            Style="{DynamicResource AccentedSquareButtonStyle}"
                                            ToolTip="{Binding Path=AudioInput.MicrophoneAvailable, Converter={StaticResource MicAvailabilityTooltipConverter}}"
                                            Width="125"
                                            x:Name="StartStop"/>
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        Margin="0"
                                        Orientation="Horizontal">

                                        <Button
                                            Click="ShowClientList_OnClick"
                                            Content="Toggle Client List"
                                            HorizontalAlignment="Center"
                                            Margin="0,15,20,0"
                                            Style="{DynamicResource SquareButtonStyle}"
                                            Width="125"
                                            x:Name="ShowClientList"/>
                                        <Button
                                            Click="ToggleServerSettings_OnClick"
                                            Content="Show Server Settings"
                                            HorizontalAlignment="Center"
                                            IsEnabled="False"
                                            Margin="0,15,0,0"
                                            Style="{DynamicResource SquareButtonStyle}"
                                            Width="125"
                                            x:Name="ToggleServerSettings"/>

                                    </StackPanel>
                                </StackPanel>

                                <Separator
                                    Background="Black"
                                    Height="3"
                                    Margin="0,7,0,0"/>

                                <StackPanel>
                                    <StackPanel
                                        Margin="0,0,0,10"
                                        Orientation="Vertical"
                                        VerticalAlignment="Center">
                                        <Label
                                            Content="Radio Panel Selection"
                                            FontSize="16"
                                            FontWeight="Medium"
                                            HorizontalAlignment="Center"/>
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Margin="0"
                                            Orientation="Horizontal">
                                            <Button
                                                Click="ShowOverlayOneVertical_OnClick"
                                                Content="1 Vertical"
                                                HorizontalAlignment="Center"
                                                Margin="0,10,20,0"
