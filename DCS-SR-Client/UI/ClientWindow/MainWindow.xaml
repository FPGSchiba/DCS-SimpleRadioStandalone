                                                HorizontalAlignment="Center"
                                                Margin="0,10,20,0"
                                                Style="{DynamicResource SquareButtonStyle}"
                                                Width="80"
                                                x:Name="ShowOverlayFiveVertical"/>
                                            <Button
                                                Click="ShowOverlayTenVertical_OnClick"
                                                Content="10 Vertical"
                                                Margin="0,10,0,0"
                                                Style="{DynamicResource SquareButtonStyle}"
                                                Width="80"
                                                x:Name="ShowOverlayTenVertical"/>

                                        </StackPanel>
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Margin="0"
                                            Orientation="Horizontal">
                                            <Button
                                                Click="ShowOverlayOneHorizontal_OnClick"
                                                Content="1 Horizontal"
                                                HorizontalAlignment="Center"
                                                Margin="0,10,20,0"
                                                Style="{DynamicResource SquareButtonStyle}"
                                                Width="80"
                                                x:Name="ShowOverlayOneHorizontal"/>
                                            <Button
                                                Click="ShowOverlayHorizontalTwo_OnClick"
                                                Content="2 Horizontal"
                                                HorizontalAlignment="Center"
                                                Margin="0,10,20,0"
                                                Style="{DynamicResource SquareButtonStyle}"
                                                Width="80"
                                                x:Name="ShowOverlayHorizontalTwo"/>
                                            <Button
                                                Click="ShowOverlayThreeHorizontal_OnClick"
                                                Content="3 Horizontal"
                                                HorizontalAlignment="Center"
                                                Margin="0,10,20,0"
                                                Style="{DynamicResource SquareButtonStyle}"
                                                Width="80"
                                                x:Name="ShowOverlayThreeHorizontal"/>
                                            <Button
                                                Click="ShowOverlayFiveHorizontal_OnClick"
                                                Content="5 Horizontal"
                                                HorizontalAlignment="Center"
                                                Margin="0,10,20,0"
                                                Style="{DynamicResource SquareButtonStyle}"
                                                Width="80"
                                                x:Name="ShowOverlayFiveHorizontal"/>
                                            <Button
                                                Click="ShowOverlayTenHorizontal_OnClick"
                                                Content="10 Horizontal"
                                                HorizontalAlignment="Center"
                                                Margin="0,10,0,0"
                                                Style="{DynamicResource SquareButtonStyle}"
                                                Width="80"
                                                x:Name="ShowOverlayTenHorizontal"/>

                                        </StackPanel>
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Margin="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                Margin="0,20,0,0"
                                                VerticalAlignment="Top">
                                                <TextBlock
                                                    Height="15"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,0"
                                                    Text="Ultrawide Panel Variants"
                                                    VerticalAlignment="Center"
                                                    Width="150"/>

                                                <Button
                                                    Click="ShowOverlayTenVerticalLong_OnClick"
                                                    Content="10 Vertical Long"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,5,0,0"
                                                    Style="{DynamicResource SquareButtonStyle}"
                                                    Width="150"
                                                    x:Name="ShowOverlayTenVerticalLong"/>
                                                <Button
                                                    Click="ShowOverlayTenHorizontalWide_OnClick"
                                                    Content="10 Horizontal Wide"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,5,0,0"
                                                    Style="{DynamicResource SquareButtonStyle}"
                                                    Width="150"
                                                    x:Name="ShowOverlayTenHorizontalWide"/>
                                                

                                            </StackPanel>
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                Margin="20,20,0,0"
                                                VerticalAlignment="Top">
                                                <TextBlock
                                                    Height="15"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,0"
                                                    Text="Compact Radio Panels"
                                                    VerticalAlignment="Center"
                                                    Width="150"/>
                                                <Button
                                                    Click="ShowOverlayTenTransparent_OnClick"
                                                    Content="Original"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,5,0,0"
                                                    Style="{DynamicResource SquareButtonStyle}"
                                                    Width="150"
                                                    x:Name="ShowOverlayTenTransparent"/>
                                                <Button
                                                    Click="ShowOverlayTenSwitch_OnClick"
                                                    Content="Switchable"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,5,0,0"
                                                    Style="{DynamicResource SquareButtonStyle}"
                                                    Width="150"
                                                    x:Name="ShowOverlayDragable"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Dabble removed selected profile for GUI cleanup  -->
                                    <!--  Not sure the code ramifications of completely removing it, thus the mere collapse  -->

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,0"
                                        Orientation="Horizontal"
                                        Visibility="Collapsed">
                                        <Label Content="Current Profile:"/>
                                        <Label Content="None"
                                                Name="CurrentProfile"/>
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        Margin="0,10,0,10"
                                        Orientation="Horizontal">
                                        <StackPanel.Resources>
                                            <converters:ConnectionStatusImageConverter x:Key="ConnectionStatusImageConverter"/>
                                        </StackPanel.Resources>

                                        <Label
                                            Content="Server"
                                            HorizontalAlignment="Center"
                                            HorizontalContentAlignment="Center"/>
                                        <Image
                                            Height="26"
                                            HorizontalAlignment="Center"
                                            Margin="5,0,5,0"
                                            Source="{Binding Path=ClientState.IsConnected, Converter={StaticResource ConnectionStatusImageConverter}}"
                                            x:Name="ServerConnectionStatus"/>
                                        <Label
                                            Content="VOIP"
                                            HorizontalAlignment="Center"
                                            HorizontalContentAlignment="Center"/>
                                        <Image
                                            Height="26"
                                            HorizontalAlignment="Center"
                                            Margin="5,0,5,0"
                                            Source="{Binding Path=ClientState.IsVoipConnected, Converter={StaticResource ConnectionStatusImageConverter}}"
                                            x:Name="VOIPConnectionStatus"/>

                                    </StackPanel>

                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </TabItem>

                    <TabItem Header="Keybinds">
                        <TabItem.Background>
                            <SolidColorBrush Color="WhiteSmoke"/>
                        </TabItem.Background>

                        <GroupBox Header="Controls"
                                x:Name="ControlsGroupBox">

                            <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                                    VerticalScrollBarVisibility="Visible">
                                <StackPanel Width="500">
