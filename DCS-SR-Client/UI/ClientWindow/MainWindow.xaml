                        <TabItem.Background>
                            <SolidColorBrush Color="WhiteSmoke"/>
                        </TabItem.Background>

                        <GroupBox Margin="0"
                                x:Name="GroupBox">

                            <StackPanel>
                                <Separator
                                    Background="Black"
                                    Height="3"
                                    Margin="0,7,0,0"/>

                                <StackPanel>

                                    <Label
                                        Content="Server Information"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        HorizontalAlignment="Center"
                                        HorizontalContentAlignment="Center"/>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        Margin="0,5,0,0"
                                        Orientation="Horizontal"
                                        Width="440">

                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Margin="0,0,10,0"
                                            Orientation="Vertical">

                                            <Label
                                                Content="IP Address"
                                                FontSize="12"
                                                HorizontalAlignment="Center"/>

                                            <TextBox
                                                Height="23"
                                                Margin="0,0,0,0"
                                                MaxLines="1"
                                                Text="3.219.75.115"
                                                TextWrapping="Wrap"
                                                Width="200"
                                                x:Name="ServerIp"/>
                                        </StackPanel>


