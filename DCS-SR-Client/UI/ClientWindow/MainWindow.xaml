                                Stretch="Uniform"
                                UseLayoutRounding="False" />
                        </Button>
                    </StackPanel>

                    <Border
                        BorderBrush="Black"
                        BorderThickness="1"
                        Height="1"
                        Margin="0,20,0,0"
                        VerticalAlignment="Top"
                        Width="999" />

                    <StackPanel
                        Height="65"
                        HorizontalAlignment="Center"
                        Margin="0"
                        Orientation="Horizontal">
                        <StackPanel.Resources>
                            <converters:BooleanInverterConverter x:Key="BooleanInverterConverter" />
                        </StackPanel.Resources>
                        <StackPanel
                            HorizontalAlignment="Center"
                            Margin="0"
                            Orientation="Vertical">
                            <Label
                                Content="Coalition Password"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                IsEnabled="{Binding Path=ClientState.ExternalAWACSModeConnected, Converter={StaticResource BooleanInverterConverter}}"
                                Margin="0,10,10,0"
                                x:Name="ExternalAWACSModePasswordLabel" />
                            <PasswordBox
                                Height="23"
                                HorizontalAlignment="Center"
                                IsEnabled="{Binding Path=ClientState.ExternalAWACSModeConnected, Converter={StaticResource BooleanInverterConverter}}"
                                Margin="0,0,10,0"
                                Width="200"
                                x:Name="ExternalAWACSModePassword" />
                        </StackPanel>
                        <StackPanel
                            HorizontalAlignment="Center"
                            Margin="0"
                            Orientation="Vertical">
                            <Label
                                Content="Username"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                IsEnabled="{Binding Path=ClientState.ExternalAWACSModeConnected, Converter={StaticResource BooleanInverterConverter}}"
                                Margin="0,10,0,0"
                                x:Name="ExternalAWACSModeNameLabel" />
                            <TextBox
                                Height="23"
                                HorizontalAlignment="Center"
                                IsEnabled="{Binding Path=ClientState.ExternalAWACSModeConnected, Converter={StaticResource BooleanInverterConverter}}"
                                Margin="10,0,0,0"
                                MaxLines="1"
                                TextWrapping="Wrap"
                                Width="200"
                                x:Name="ExternalAWACSModeName" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        HorizontalAlignment="Center"
                        Margin="0"
                        Orientation="Horizontal">
                        <Button
                            Command="{Binding Path=ConnectCommand}"
                            Content="Connect: Server"
                            HorizontalAlignment="Center"
                            Margin="0,15,20,0"
                            Style="{DynamicResource AccentedSquareButtonStyle}"
                            ToolTip="{Binding Path=AudioInput.MicrophoneAvailable, Converter={StaticResource MicAvailabilityTooltipConverter}}"
                            Width="125"
                            x:Name="StartStop" />
                        <Button
                            Click="ConnectExternalAWACSMode_OnClick"
                            Content="Connect: Radios"
                            IsEnabled="False"
                            Margin="0,15,0,0"
                            Style="{DynamicResource AccentedSquareButtonStyle}"
                            Width="125"
                            x:Name="ConnectExternalAWACSMode" />
                    </StackPanel>

                    <StackPanel
                        HorizontalAlignment="Center"
                        Margin="0"
                        Orientation="Horizontal">

                        <Button
                            Click="ShowClientList_OnClick"
                            Content="Toggle Client List"
                            HorizontalAlignment="Center"
                            Margin="0,15,20,0"
                            Style="{DynamicResource SquareButtonStyle}"
                            Width="125"
                            x:Name="ShowClientList" />
                        <Button
                            Click="ToggleServerSettings_OnClick"
                            Content="Show Server Settings"
                            HorizontalAlignment="Center"
                            IsEnabled="False"
                            Margin="0,15,0,0"
                            Style="{DynamicResource SquareButtonStyle}"
                            Width="125"
                            x:Name="ToggleServerSettings" />

                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        Margin="0"
                        Orientation="Horizontal">
                        <Button
                            Click="ShowOverlayTwo_OnClick"
                            Content="Two Radios"
                            HorizontalAlignment="Center"
                            Margin="0,10,20,0"
                            Style="{DynamicResource SquareButtonStyle}"
                            Width="125"
                            x:Name="ShowOverlayTwo" />
                        <Button
                            Click="ShowOverlayFive_OnClick"
                            Content="Five Radios"
                            HorizontalAlignment="Center"
                            Margin="0,10,20,0"
                            Style="{DynamicResource SquareButtonStyle}"
                            Width="125"
                            x:Name="ShowOverlayFoive" />
                        <Button
                            Click="ShowAwacsOverlay_OnClick"
                            Content="Ten Radios"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            Style="{DynamicResource SquareButtonStyle}"
                            Width="125"
                            x:Name="ShowAwacsOverlay" />

                    </StackPanel>

                    <StackPanel
                        HorizontalAlignment="Center"
                        Margin="0,0,0,0"
                        Orientation="Horizontal">
                        <Label Content="Current Profile:" />
                        <Label Content="None" Name="CurrentProfile" />
                    </StackPanel>

                    <StackPanel
                        HorizontalAlignment="Center"
                        Margin="0"
                        Orientation="Horizontal">
                        <StackPanel.Resources>
                            <converters:ConnectionStatusImageConverter x:Key="ConnectionStatusImageConverter" />
                        </StackPanel.Resources>
                        <Label
                            Content="Server"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center" />
                        <Image
                            Height="26"
                            HorizontalAlignment="Center"
                            Margin="5,0,5,0"
                            Source="{Binding Path=ClientState.IsConnected, Converter={StaticResource ConnectionStatusImageConverter}}"
                            x:Name="ServerConnectionStatus" />
                        <Label
                            Content="VOIP"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center" />
                        <Image
                            Height="26"
                            HorizontalAlignment="Center"
                            Margin="5,0,5,0"
                            Source="{Binding Path=ClientState.IsVoipConnected, Converter={StaticResource ConnectionStatusImageConverter}}"
                            x:Name="VOIPConnectionStatus" />

                    </StackPanel>

                </StackPanel>
            </GroupBox>
        </TabItem>

        <TabItem Header="Controls">
            <GroupBox Header="Controls" x:Name="ControlsGroupBox">

                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
                    <StackPanel>
                        <Button
                            Click="RescanInputDevices"
                            Content="Rescan Controller Input Devices"
