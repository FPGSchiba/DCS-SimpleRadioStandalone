    xmlns:input="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Settings"
    xmlns:local="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Settings"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid
        x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="365"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Background="#E9E9E9"
                MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <Button
                    Click="Minimize_Click"
                    Content="{materialDesign:PackIcon WindowMinimize}"
                    Height="24"
                    Margin="0,0,3,0"
                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                    Width="24"
                    x:Name="Minimize"/>
                <Button
                    Click="Close_Click"
                    Content="{materialDesign:PackIcon Close}"
                    Height="24"
                    Margin="3,0,0,0"
                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                    Width="24"
                    x:Name="Close"/>
            </StackPanel>
        </Grid>

        <TabControl Grid.Row="1"
                    SelectionChanged="TabControl_OnSelected"
                    x:Name="TabControl">

            <TabItem Header="New"
                    Height="25"
                    Padding="0">
                <Frame x:Name="DisplayFrame"/>
            </TabItem>

            <TabItem Header="Old"
                    Height="25"
                    Padding="0">
                <TabControl x:Name="TabControlOld">
                    <!--
                    <TabControl.Background>
                        <ImageBrush AlignmentX="Center" AlignmentY="Center" ImageSource="/UI/ClientWindow/vanguardsrsback.png" />
                    </TabControl.Background>
                    -->


                    <TabControl.Resources>
                        <converters:MicAvailabilityTooltipConverter x:Key="MicAvailabilityTooltipConverter"/>
                    </TabControl.Resources>

